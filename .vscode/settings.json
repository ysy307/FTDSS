{
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.renderLineHighlight": "all",
    "editor.dragAndDrop": false,
    "editor.acceptSuggestionOnEnter": "off",
    "files.autoSave": "onWindowChange",
    "files.associations": {
        "*.FOR": "FortranFreeForm",
        "*.f95": "FortranFreeForm",
        "*.f03": "FortranFreeForm",
        "*.f90": "FortranFreeForm"
    },
    "fortran.fortls.path": "/usr/local/bin/fortls",
    "fortran.linter.extraArgs": [
        "-module",
        "/workspaces/FTDSS/MakeBuild/.mod",
        "-module",
        "/opt/intel/oneapi/mpi/2021.14/include/mpi",
        "-module",
        "/opt/intel/oneapi/2025.0/include/mpi",
        "-fpp"
    ],
    "fortran.linter.compiler": "ifx",
    "fortran.linter.compilerPath": "/opt/intel/oneapi/compiler/latest/bin/ifx",
    "fortran.linter.includePaths": [
        "/usr/include/",
        "/workspaces/FTDSS/MakeBuild/.mod/",
        "/opt/intel/oneapi/mkl/latest/include/",
        "/opt/intel/oneapi/mpi/2021.14/include/",
        "/opt/intel/oneapi/2025.0/include/"
    ],
    "fortran.linter.modOutput": "/workspaces/FTDSS/MakeBuild/.mod/",
    "fortran.formatting.formatter": "fprettify",
    "fortran.formatting.fprettifyArgs": [
        "--indent",
        "4",
        "--whitespace",
        "4",
        "--whitespace-comma",
        "true",
        "--whitespace-assignment",
        "true",
        "--whitespace-relational",
        "true",
        "--whitespace-logical",
        "true",
        "--whitespace-plusminus",
        "true",
        "--whitespace-multdiv",
        "true",
        "--whitespace-print",
        "true",
        "--whitespace-intrinsics",
        "true",
        "--whitespace-decl",
        "true",
        "--whitespace-type",
        "false",
        "--strip-comments",
        "--case",
        "1",
        "1",
        "1",
        "1",
        "--line-length",
        "256",
        "--silent"
    ],
    "fortran.preferredCase": "lowercase",
    "[FortranFreeForm]": {
        "files.autoGuessEncoding": true,
        "files.encoding": "utf8"
    },
    "files.exclude": {
        "**/.git": false
    }
}