{
    "name": "FTDSS",
    "dockerFile": "Dockerfile",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-azuretools.vscode-docker",
                "fortran-lang.linter-gfortran",
                "ms-vscode.makefile-tools",
                "PKief.material-icon-theme",
                "ms-python.python",
                "ms-toolsai.jupyter"
            ],
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "editor.formatOnSave": true,
                "editor.tabSize": 4,
                "editor.insertSpaces": true,
                "editor.detectIndentation": false,
                "editor.renderLineHighlight": "all",
                "editor.dragAndDrop": false,
                "editor.acceptSuggestionOnEnter": "off",
                "files.autoSave": "onWindowChange",
                "files.associations": {
                    "*.FOR": "FortranFreeForm",
                    "*.f95": "FortranFreeForm",
                    "*.f03": "FortranFreeForm",
                    "*.f90": "FortranFreeForm"
                },
                "fortran.fortls.path": "/usr/local/bin/fortls",
                "fortran.linter.extraArgs": [
                    "-module",
                    "/workspaces/FTDSS/build/mod",
                    "-fpp"
                ],
                "fortran.linter.compiler": "ifx",
                "fortran.linter.compilerPath": "/opt/intel/oneapi/compiler/latest/bin/ifx",
                "fortran.linter.includePaths": [
                    "/usr/include/",
                    "/workspaces/FTDSS/build/mod/",
                    "/opt/intel/oneapi/mkl/latest/include/"
                ],
                "fortran.linter.modOutput": "/workspaces/FTDSS/build/mod/",
                "fortran.formatting.formatter": "fprettify",
                "fortran.formatting.fprettifyArgs": [
                    "--indent",
                    "4",
                    "--whitespace",
                    "4",
                    "--whitespace-comma",
                    "true",
                    "--whitespace-assignment",
                    "true",
                    "--whitespace-relational",
                    "true",
                    "--whitespace-logical",
                    "true",
                    "--whitespace-plusminus",
                    "true",
                    "--whitespace-multdiv",
                    "true",
                    "--whitespace-print",
                    "true",
                    "--whitespace-intrinsics",
                    "true",
                    "--whitespace-decl",
                    "true",
                    "--whitespace-type",
                    "false",
                    "--strip-comments",
                    "--case",
                    "1",
                    "1",
                    "1",
                    "1",
                    "--line-length",
                    "256",
                    "--silent"
                ],
                "fortran.preferredCase": "lowercase",
                "[FortranFreeForm]": {
                    "files.autoGuessEncoding": true,
                    "files.encoding": "utf8"
                }
            }
        }
    },
    "postCreateCommand": "sudo apt-get update"
}